using System;

class Program
{
    static void Main(string[] args)
    {
        RunTest("Heal increases HP", TestHeal);
        RunTest("Heal does not exceed cap", TestHeal_OverMax);
    }
    static void RunTest(string testName, Func<bool> testFunc)
    {
        bool result = testFunc();
        Console.WriteLine(result ? $"{testName} passed." : $"{testName} failed.");
    }

    static int Heal(int hp)
    {
        return hp + new Random().Next(1, 21);
    }

    static bool TestHeal()
    {
        int hp = 90;
        int result = Heal(hp);
        return result > hp && result <= hp + 20;
    }

    static bool TestHeal_OverMax()
    {
        int hp = 110;
        int result = Heal(hp);
        return result <= 120;
    }
}
